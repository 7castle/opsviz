server {
  listen 80;
  server_name _;

  location / {
    proxy_pass            http://127.0.0.1:8081/;
    auth_basic            "Restricted";
    auth_basic_user_file  graphite.htpasswd;
  }

  location /kibana {
    alias /opt/kibana/current;
    auth_basic            "Restricted";
    auth_basic_user_file  graphite.htpasswd;
  }

  location /elasticsearch {
    proxy_pass            http://23.22.60.195:9200/;
    auth_basic            "Restricted";
    auth_basic_user_file  graphite.htpasswd;
  }

  location /grafana {
    alias <%= node['grafana']['install_dir'] %>;
    auth_basic            "Restricted";
    auth_basic_user_file  graphite.htpasswd;
  }

  rewrite ^/sensu$ /sensu/ redirect;
  location ~ (/sensu/|/socket.io/) {
    proxy_pass            http://127.0.0.1:<%= node['uchiwa']['settings']['port']%>;

    auth_basic            "Restricted";
    auth_basic_user_file  graphite.htpasswd;

    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $host;

    rewrite /sensu/(.*) /$1 break;
  }

}
